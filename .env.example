# Database Configuration
POSTGRES_USER=dharmaguard
POSTGRES_PASSWORD=securepassword123
POSTGRES_DB=dharmaguard
DATABASE_URL=postgresql://dharmaguard:securepassword123@postgres:5432/dharmaguard

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379

# ClickHouse Configuration
CLICKHOUSE_USER=dharmaguard
CLICKHOUSE_PASSWORD=clickhouse123
CLICKHOUSE_DB=dharmaguard_analytics
CLICKHOUSE_URL=http://dharmaguard:clickhouse123@clickhouse:8123/dharmaguard_analytics

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=dharmaguard
MONGO_INITDB_ROOT_PASSWORD=mongo123
MONGODB_URL=mongodb://dharmaguard:mongo123@mongodb:27017/dharmaguard_docs

# Kafka Configuration
KAFKA_BROKERS=kafka:29092

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-in-production

# SEBI API Configuration
SEBI_API_KEY=your-sebi-api-key-here
SEBI_API_URL=https://unified.sebi.gov.in/api/v1
SEBI_CLIENT_ID=your-sebi-client-id
SEBI_CLIENT_SECRET=your-sebi-client-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_ADDRESS=noreply@dharmaguard.com

# SMS Configuration
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
DATA_ENCRYPTION_KEY=another-32-character-key-for-data

# External APIs
NSE_API_KEY=your-nse-api-key
BSE_API_KEY=your-bse-api-key
MCX_API_KEY=your-mcx-api-key

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key
SMART_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Storage Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=dharmaguard-storage

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
JAEGER_URL=http://jaeger:14268

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# Security Configuration
SESSION_TIMEOUT_MINUTES=30
PASSWORD_MIN_LENGTH=12
MFA_ENABLED=true
BIOMETRIC_AUTH_ENABLED=false

# Development Configuration
NODE_ENV=development
RUST_LOG=info
LOG_LEVEL=INFO
DEBUG_MODE=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# RUST_LOG=warn
# LOG_LEVEL=WARN
# DEBUG_MODE=false
# SSL_CERT_PATH=/etc/ssl/certs/dharmaguard.crt
# SSL_KEY_PATH=/etc/ssl/private/dharmaguard.key

# Feature Flags
FEATURE_ML_ENABLED=true
FEATURE_BLOCKCHAIN_ENABLED=true
FEATURE_BIOMETRIC_AUTH_ENABLED=false
FEATURE_VOICE_COMMANDS_ENABLED=false
FEATURE_QUANTUM_ENCRYPTION_ENABLED=false

# Performance Tuning
MAX_CONNECTIONS_PER_SERVICE=100
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT_SECONDS=30
BULK_INSERT_BATCH_SIZE=1000

# Compliance Configuration
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years as per SEBI requirements
TRADE_DATA_RETENTION_DAYS=2555
SURVEILLANCE_ALERT_RETENTION_DAYS=365

# ML/AI Configuration
MODEL_STORE_PATH=/app/models
FEATURE_STORE_PATH=/app/features
TRAINING_DATA_PATH=/app/training_data
INFERENCE_BATCH_SIZE=32
MODEL_RETRAIN_INTERVAL_HOURS=24

# API Configuration
API_TIMEOUT_SECONDS=30
MAX_REQUEST_SIZE_MB=10
ENABLE_API_VERSIONING=true
DEFAULT_API_VERSION=v1

# WebSocket Configuration
WS_MAX_CONNECTIONS=10000
WS_MESSAGE_BUFFER_SIZE=1024
WS_HEARTBEAT_INTERVAL_SECONDS=30

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=512
ENABLE_QUERY_CACHE=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=s3

# Disaster Recovery
DR_ENABLED=false
DR_REGION=ap-southeast-1
DR_SYNC_INTERVAL_MINUTES=15

# Testing Configuration
TEST_DATABASE_URL=postgresql://dharmaguard:testpass@postgres-test:5432/dharmaguard_test
TEST_REDIS_URL=redis://:testpass@redis-test:6379
LOAD_TEST_ENABLED=false
E2E_TEST_ENABLED=false

# Docker Configuration
COMPOSE_PROJECT_NAME=dharmaguard
DOCKER_REGISTRY=ghcr.io/your-org
IMAGE_TAG=latest

# Kubernetes Configuration
KUBERNETES_NAMESPACE=dharmaguard
HELM_RELEASE_NAME=dharmaguard
KUBERNETES_CONFIG_PATH=~/.kube/config
